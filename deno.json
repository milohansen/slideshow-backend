{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi --watch src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi src/main.ts",
    "cli": "deno run --allow-read --allow-write --allow-env --allow-ffi --allow-run src/cli.ts"
  },
  "imports": {
    "hono": "jsr:@hono/hono@^4.6.14",
    "sqlite": "jsr:@db/sqlite@0.12",
    "@std/fs": "jsr:@std/fs@^1.0.8",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/cli": "jsr:@std/cli@^1.0.9",
    "@std/crypto": "jsr:@std/crypto@^1.0.3",
    "@std/encoding": "jsr:@std/encoding@^1.0.5"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx",
    "lib": ["deno.window", "deno.unstable"]
  }
}
